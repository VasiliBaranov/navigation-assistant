<Window x:Class="NavigationAssistant.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:NavigationAssistant"
        Title="Navigation Assistant Settings" 
        SizeToContent="Height"
        Width="350"
        WindowStartupLocation="CenterScreen">
    <TabControl HorizontalAlignment="Stretch" Name="SettingsTabControl" VerticalAlignment="Top">
        <TabItem Header="Basic" Name="BasicSettingsTab">
            <local:BasicSettingsControl />
        </TabItem>
        <TabItem Header="Advanced" Name="AdvancedSettingsTab">
            <local:AdvancedSettingsControl />
        </TabItem>
    </TabControl>
</Window>
